{
  "name": "prox-deals-email",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "dev": "npm run build && node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "send:weekly": "npm run build && node dist/cli/sendWeekly.js",
    "preview:build": "npm run build && node dist/preview/buildPage.js",
    "scrape:sprouts": "npm run build && node dist/cli/scrapeSprouts.js",
    "send:weekly:scraped": "DEALS_JSON=src/data/deals.scraped.json npm run send:weekly"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.1",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "date-fns": "^3.6.0",
    "dotenv": "^16.6.1",
    "nodemailer": "^7.0.6",
    "resend": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "playwright": "^1.55.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
